<%= render "devise/shared/links" %>
<h1 class ="text-center mt-4"><Strong>Login to your alpha blog</strong></h1>
<div class="container-xl">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class:"shadow p-3 mb-3 bg-dark rounded") do |f| %>
                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label text-light"%> <br/>
                    <div class="col-10"><%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Enter your email address"%></div>
                </div> <br>
                <div class="form-group row">
                    <%= f.label :password, class: "col-2 col-form-label text-light"%> <br/>
                    <div class="col-10"><%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Enter your password"%></div>
                </div> <br>
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class:"text-light" %>
                  </div>
                <% end %>
                <div class="form-group row justify-content-center"><%= f.submit("Login", class:"btn btn-outline-light btn-lg")%></div>
            <%end%>
            <div class="form-group row justify-content-center">
                <%= link_to "Back to Articles List", articles_path, method: :get, class:"btn btn-secondary"%>
            </div>
        </div>

    </div>

</div>


