<h1 class ="text-center mt-4">All Articles</h1>
<%for article in @articles%>
    <div class="card text-center">
    <div class="card-header">
        Featured
    </div>
    <div class="card-body">
        <h5 class="card-title"></h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
    <div class="card-footer text-muted">
        2 days ago
    </div>
    </div>
<%end%>
<table class = "table table-striped">
    <thead class = "thead-dark">
        <tr style = "text-align: center">
            <th>Title</th>
            <th>Description</th>
            <th colspan = "3">Action</th>
        </tr>
    </thead>
    <tbody style = "text-align: center">
    <%for article in @articles%>
        <tr>
            <td><%=article.title%></td>
            <td><%=article.description%></td>
            <td><%= link_to "Show", article_path(article.id), class:"btn btn-info"%></td>
            <td><%= link_to "Edit", edit_article_path(article.id), class:"btn btn-info"%></td>
            <td><%= link_to "Delete", article_path(article.id), method: :delete, data:{confirm: "Are you sure?"}, class:"btn btn-danger"%></td>
        </tr>
    <% end %>
    </tbody>
</table>
<%= link_to "New article", new_article_path, class: "btn btn-secondary"%>